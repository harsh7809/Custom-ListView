<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:padding='2dp'
            android:id="@+id/ico"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/ic"
            android:layout_toLeftOf="@+id/name"
            android:layout_toStartOf="@+id/name"
            android:src="@drawable/circle" />
        <TextView
            android:padding='2dp'
            android:id="@+id/ic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="H"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ic"
            android:layout_toRightOf="@+id/ic"
            android:paddingLeft="18dp"
            android:paddingTop="0dp"
            android:text="Harsh Bansal"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/ico"
            android:layout_toRightOf="@+id/ico"
            android:paddingLeft="19dp"
            android:paddingTop="3dp"
            android:text="Harsh Bansal"
            android:textSize="13dp" />


    </RelativeLayout>


</LinearLayout>